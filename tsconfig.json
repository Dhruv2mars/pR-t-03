{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@project/editor-core": ["./packages/editor-core/src"],
      "@project/db-utils": ["./packages/db-utils/src"]
    }
  },
  "include": ["apps/**/*", "packages/**/*"],
  "references": [
    { "path": "./apps/web" },
    { "path": "./apps/macos" },
    { "path": "./packages/editor-core" },
    { "path": "./packages/db-utils" }
  ]
}